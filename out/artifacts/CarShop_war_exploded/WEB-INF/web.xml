<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>

    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Base -->

    <servlet>
        <servlet-name>baseServlet</servlet-name>
        <servlet-class>carShopService.servlets.BaseServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>baseServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Cars -->
    <servlet>
        <servlet-name>carsServlet</servlet-name>
        <servlet-class>carShopService.servlets.CarsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>carsServlet</servlet-name>
        <url-pattern>/cars</url-pattern>
    </servlet-mapping>

    <!-- Managers -->
    <servlet>
        <servlet-name>managersServlet</servlet-name>
        <servlet-class>carShopService.servlets.ManagersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>managersServlet</servlet-name>
        <url-pattern>/managers</url-pattern>
    </servlet-mapping>

    <!-- Buying car -->
    <servlet>
        <servlet-name>buyingServlet</servlet-name>
        <servlet-class>carShopService.servlets.BuyingServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buyingServlet</servlet-name>
        <url-pattern>/buyingcar</url-pattern>
    </servlet-mapping>

    <!-- Best manager -->
    <servlet>
        <servlet-name>bestManagerServlet</servlet-name>
        <servlet-class>carShopService.servlets.BestManagerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>bestManagerServlet</servlet-name>
        <url-pattern>/bestmanager</url-pattern>
    </servlet-mapping>
</web-app>